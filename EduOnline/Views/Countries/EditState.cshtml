@model EduOnline.Models.StateViewModel

@{
    ViewData["Title"] = "Edit";
}

<h4>Dpto/Estado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditState">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CountryId" />
            <input type="hidden" asp-for="CreatedDate" />

            <partial name="../Shared/PartialViews/_StateCreateEdit.cshtml" />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                <a asp-action="Details" asp-route-countryId="@Model?.CountryId" class="btn btn-outline-success">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

